<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/table_item_height" android:background="@color/colorLoginButton">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row_item_top"
        android:textColor="@color/colorWhite" android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" android:paddingTop="5dp" android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row_item_bottom"
        android:textColor="@color/colorWhite" android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" android:paddingBottom="5dp" android:gravity="center"/>

</RelativeLayout>