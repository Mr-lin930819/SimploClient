<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/app_bar_main"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/stu_num_text"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:text="学号"
        android:textSize="30dp"
        android:textAlignment="center"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_toRightOf="@id/stu_num_text"/>

    <TextView
        android:id="@+id/stu_passwd_text"
        android:layout_below="@id/stu_num_text"
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:text="密码"
        android:textSize="30dp"
        android:textAlignment="center"/>
    <EditText
        android:layout_alignTop="@id/stu_passwd_text"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_toRightOf="@id/stu_passwd_text"/>

    <TextView
        android:id="@+id/code_text"
        android:layout_below="@id/stu_passwd_text"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:text="验证码"
        android:textSize="30dp"
        android:textAlignment="center"/>
    <EditText
        android:layout_alignTop="@id/code_text"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_toRightOf="@id/code_text"/>
    
    <ImageView
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_below="@+id/code_text"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"/>


</RelativeLayout>
