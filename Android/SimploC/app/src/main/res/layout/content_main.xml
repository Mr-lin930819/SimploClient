            </LinearLayout>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/main_info_list"/>
        </LinearLayout>

    </LinearLayout>

    <!-- 列表布局，用于显示等级考试信息 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cet_info_layout"
        android:visibility="gone" android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:text="等级考试信息" android:textSize="@dimen/table_title_text_size"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 表头 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp" android:background="@color/colorLoginButton"
                android:weightSum="12">
                <TextView
                    android:layout_width="wrap_content" android:gravity="center"
                    android:layout_height="match_parent" android:text="学年"
                    android:layout_weight="4"/>
                <TextView
                    android:layout_width="wrap_content" android:gravity="center"
                    android:layout_height="match_parent" android:text="学期"
                    android:layout_weight="2"/>
                <TextView
                    android:layout_width="wrap_content" android:gravity="center"
                    android:layout_height="match_parent" android:text="考试名称"
                    android:layout_weight="3"/>
                <TextView
                    android:layout_width="wrap_content" android:gravity="center"
                    android:layout_height="match_parent" android:text="成绩"
                    android:layout_weight="3"/>

            </LinearLayout>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cet_info_list"/>
        </LinearLayout>

    </LinearLayout>
