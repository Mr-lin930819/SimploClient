    <!-- 课程表布局 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/table_view"
        android:visibility="gone">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="课程表" android:gravity="center"
            android:textSize="20sp"/>
"       <com.localhost.lin.simploc.customview.NoneScrollGridView
            android:layout_width="fill_parent" android:background="@color/colorLoginButton"
            android:layout_height="20dp" android:numColumns="7"
            android:id="@+id/table_column" android:paddingLeft="20dp" android:horizontalSpacing="3dp"
            android:columnWidth="45dp" android:stretchMode="columnWidth"
        ></com.localhost.lin.simploc.customview.NoneScrollGridView>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <com.localhost.lin.simploc.customview.NoneScrollGridView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/table_row" android:background="@color/colorLoginButton"
                        android:numColumns="1" android:verticalSpacing="3dp"
                        android:columnWidth="20dp" android:stretchMode="columnWidth"
                        ></com.localhost.lin.simploc.customview.NoneScrollGridView>
                    <com.localhost.lin.simploc.customview.NoneScrollGridView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/lesson_table"
                        android:numColumns="7" android:verticalSpacing="3dp" android:horizontalSpacing="3dp"
                        android:columnWidth="45dp" android:stretchMode="columnWidth">
                    </com.localhost.lin.simploc.customview.NoneScrollGridView>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>

    </LinearLayout>

    <!-- 列表布局，用于显示考试信息或等级考试信息 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_info_layout"
        android:visibility="gone" android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:text="考试信息" android:textSize="@dimen/table_title_text_size"
            android:gravity="center"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- 表头 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" android:background="@color/colorLoginButton">
                    <TextView
                        android:layout_width="150dp" android:gravity="center"
                        android:layout_height="match_parent" android:text="课程名称" />
                    <TextView
                        android:layout_width="120dp" android:gravity="center"
                        android:layout_height="match_parent" android:text="考试时间" />
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent" android:text="考试地点" />
                    <TextView
                        android:layout_width="25dp" android:gravity="center"
                        android:layout_height="match_parent" android:text="座位"/>
                    <TextView
                        android:layout_width="90dp" android:gravity="center"
                        android:layout_height="match_parent" android:text="校区"/>
                </LinearLayout>
                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/main_info_list"></ListView>
            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>
