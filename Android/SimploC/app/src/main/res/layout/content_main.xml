    <!-- 列表布局，用于显示考试信息 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_info_layout"
        android:visibility="gone" android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:text="考试信息" android:textSize="@dimen/table_title_text_size"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 表头 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp" android:background="@color/colorLoginButton"
                android:weightSum="12">
                <TextView
                    android:layout_width="wrap_content" android:gravity="center"
                    android:layout_height="match_parent" android:text="课程名称"
                    android:layout_weight="5"/>
                <TextView
                    android:layout_width="wrap_content" android:gravity="center"
                    android:layout_height="match_parent" android:text="考试时间"
